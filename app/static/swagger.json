{
  "swagger": "2.0",
  "info": {
    "description": "API documentation for Cloud Computing Micro-Project",
    "version": "1.0.0",
    "title": "Cloud Computing Micro-Project"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "PDF Operations",
      "description": "Endpoints for PDF operations"
    }
  ],
  "paths": {
    "/create_embedded_pdf": {
      "post": {
        "tags": ["PDF Operations"],
        "summary": "Create embedded PDF",
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "formData",
            "name": "files",
            "type": "file",
            "required": true,
            "description": "PDF files to embed"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "$ref": "#/definitions/EmbeddedPDFResponse"
            }
          }
        }
      }
    },
    "/extract_embedded_pdf": {
      "post": {
        "tags": ["PDF Operations"],
        "summary": "Extract embedded PDF",
        "consumes": ["multipart/form-data"],
        "produces": ["application/zip"],
        "parameters": [
          {
            "in": "formData",
            "name": "embedded_json",
            "type": "file",
            "required": true,
            "description": "JSON file with embedded PDF data"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/endpoint1": {
      "post": {
        "tags": ["PDF Operations"],
        "summary": "Embed PDFs",
        "consumes": ["multipart/form-data"],
        "produces": ["application/pdf"],
        "parameters": [
          {
            "in": "formData",
            "name": "pdf_Base_file",
            "type": "file",
            "required": true,
            "description": "Base PDF file"
          },
          {
            "in": "formData",
            "name": "pdf_files",
            "type": "file",
            "required": false,
            "description": "Additional PDF files to embed"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/endpoint2": {
      "post": {
        "tags": ["PDF Operations"],
        "summary": "Extract PDFs from embedded file",
        "consumes": ["multipart/form-data"],
        "produces": ["application/zip"],
        "parameters": [
          {
            "in": "formData",
            "name": "embedded_file",
            "type": "file",
            "required": true,
            "description": "Embedded PDF file"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  },
  "definitions": {
    "EmbeddedPDFResponse": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    }
  }
}
